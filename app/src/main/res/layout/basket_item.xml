<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_basket"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        android:outlineAmbientShadowColor="@color/app_background"
        android:outlineSpotShadowColor="@color/app_background"
        android:elevation="@dimen/_2sdp"
        android:layout_marginVertical="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:targetApi="p">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                app:cardElevation="0dp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp">
                <ImageView
                    android:src="@drawable/a53_white"
                    android:layout_margin="@dimen/_3sdp"
                    android:id="@+id/image_product"
                    android:scaleType="centerInside"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_shimmer"
                android:visibility="gone"
                android:layout_marginVertical="@dimen/_8sdp"
                app:cardElevation="0dp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp">
                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmer"
                    android:background="@color/shimmer_color"
                    android:src="@drawable/a53_white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/name_product"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/inter_medium"
                    android:textStyle="bold"
                    android:text="Airtpods pro 12 max"
                    android:textColor="@color/text_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/price"
                    android:textColor="@color/text_color_red"
                    android:textStyle="normal"
                    android:textSize="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="150 000 so'm"
                    android:fontFamily="@font/inter_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/basket_color"
                app:cardElevation="0dp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/plus"
                        android:paddingTop="@dimen/_3sdp"
                        android:gravity="center"
                        android:textStyle="normal"
                        android:textSize="@dimen/_11sdp"
                        android:fontFamily="@font/inter_medium"
                        android:textColor="@color/text_color_gray"
                        android:text="+"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"/>
                    <TextView
                        android:layout_weight="1"
                        android:gravity="center"
                        android:id="@+id/count"
                        android:paddingTop="@dimen/_3sdp"
                        android:textStyle="normal"
                        android:textSize="@dimen/_8sdp"
                        android:fontFamily="@font/inter_medium"
                        android:textColor="@color/text_color_gray"
                        android:maxLines="1"
                        android:maxLength="3"
                        android:text="99+"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:gravity="center"
                        android:id="@+id/minus"
                        android:paddingTop="@dimen/_3sdp"
                        android:textStyle="normal"
                        android:textSize="@dimen/_11sdp"
                        android:fontFamily="@font/inter_medium"
                        android:textColor="@color/text_color_gray"
                        android:text="-"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.cardview.widget.CardView>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
</androidx.appcompat.widget.LinearLayoutCompat>