<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_color"
    app:layoutDescription="@xml/fragment_product_info_scene"
    tools:context=".ui.main.productInfoScreen.ProductInfoFragment">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.65"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />
    <ProgressBar
        android:id="@+id/progress"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:indeterminateTint="@color/circle_progress_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:elevation="@dimen/_2sdp"
        android:visibility="invisible"
        android:id="@+id/toolbar_view"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/bac_btn"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:cardBackgroundColor="@color/color_item"
        app:cardCornerRadius="@dimen/_8sdp"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03">

        <ImageView
            android:id="@+id/bac_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_3sdp"
            android:src="@drawable/ic_arrow_left" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/lick_btn"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:cardBackgroundColor="@color/color_item"
        app:cardCornerRadius="@dimen/_8sdp"
        app:layout_constraintHorizontal_bias="0.96"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/share_btn"
        app:layout_constraintTop_toTopOf="@id/bac_btn"
        app:layout_constraintVertical_bias="0.03">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/lick_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/ic_favorite" />
            <ProgressBar
                android:id="@+id/progress_product"
                android:indeterminateTint="@color/app_background"
                android:padding="@dimen/_3sdp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/share_btn"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:cardBackgroundColor="@color/color_item"
        app:cardCornerRadius="@dimen/_8sdp"
        app:layout_constraintHorizontal_bias="0.96"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/lock_btn"
        app:layout_constraintTop_toTopOf="@id/bac_btn"
        app:layout_constraintVertical_bias="0.03">

        <ImageView
            android:id="@+id/share_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_3sdp"
            android:src="@drawable/ic_share_icon" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/lock_btn"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:cardBackgroundColor="@color/color_item"
        app:cardCornerRadius="@dimen/_8sdp"
        app:layout_constraintHorizontal_bias="0.96"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/bac_btn"
        app:layout_constraintVertical_bias="0.03">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/lock_icon"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/ic_basket" />
            <ProgressBar
                android:id="@+id/progress_image"
                android:visibility="gone"
                android:layout_margin="@dimen/_2sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:indeterminateTint="@color/circle_progress_color"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>




    <com.tbuonomo.viewpagerdotsindicator.SpringDotsIndicator
        android:id="@+id/spring_dots_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        app:dampingRatio="0.5"
        app:dotsColor="@color/circle_progress_color"
        app:dotsCornerRadius="@dimen/_4sdp"
        app:dotsSize="@dimen/_6sdp"
        app:dotsSpacing="@dimen/_3sdp"
        app:dotsStrokeColor="@color/line_color"
        app:dotsStrokeWidth="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewPager2"
        app:stiffness="300" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:fontFamily="@font/inter_medium"
        android:paddingHorizontal="@dimen/_6sdp"
        android:text="Calvin Clein"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_9sdp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/spring_dots_indicator"
        tools:layout_editor_absoluteX="44dp" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:descendantFocusability="beforeDescendants"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linear_price"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/_6sdp"
                    android:textStyle="bold"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:textColor="@color/text_color_gray"
                    android:text="@string/summa"
                    android:fontFamily="@font/inter_medium"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/price"
                    android:gravity="end|center"
                    android:textColor="@color/text_color"
                    android:textStyle="normal"
                    android:textSize="@dimen/_6sdp"
                    android:fontFamily="@font/inter_medium"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="horizontal"
                android:id="@+id/linear_old_price"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/_6sdp"
                    android:textStyle="bold"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:textColor="@color/text_color_gray"
                    android:text="@string/old_price"
                    android:fontFamily="@font/inter_medium"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/old_price"
                    android:gravity="end|center"
                    android:textColor="@color/text_color"
                    android:textStyle="normal"
                    android:textSize="@dimen/_6sdp"
                    android:fontFamily="@font/inter_medium"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="horizontal"
                android:id="@+id/linear_percent"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/_6sdp"
                    android:textStyle="bold"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:textColor="@color/text_color_gray"
                    android:text="@string/percent"
                    android:fontFamily="@font/inter_medium"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/percent"
                    android:gravity="end|center"
                    android:textColor="@color/text_color"
                    android:textStyle="normal"
                    android:textSize="@dimen/_6sdp"
                    android:fontFamily="@font/inter_medium"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <TextView
                android:id="@+id/info_text"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_6sdp"
                android:textStyle="normal"
                android:textColor="@color/text_color_gray"
                android:fontFamily="@font/inter_medium"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linear_comment"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title_comment"
                    android:textSize="@dimen/_6sdp"
                    android:textStyle="bold"
                    android:textColor="@color/text_color_gray"
                    android:fontFamily="@font/inter_medium"
                    android:layout_weight="1"
                    android:text="@string/comment_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_comment"
                    android:layout_margin="@dimen/_5sdp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/app_background_color"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:layout_width="@dimen/_18sdp"
                    app:cardCornerRadius="@dimen/_12sdp"
                    android:layout_height="@dimen/_18sdp">
                    <ImageView
                        android:id="@+id/comment_icon"
                        android:scaleType="centerInside"
                        android:src="@drawable/comment"
                        android:padding="@dimen/_4sdp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/comment_edit"
                android:visibility="gone"
                android:background="@drawable/input_text_back"
                android:paddingHorizontal="@dimen/_6sdp"
                android:gravity="center"
                android:layout_marginVertical="@dimen/_6sdp"
                android:layout_marginHorizontal="@dimen/_6sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edite_text_comment"
                    android:paddingVertical="@dimen/_3sdp"
                    android:background="@null"
                    android:hint="@string/comment"
                    android:textSize="@dimen/_6sdp"
                    android:textStyle="normal"
                    android:layout_weight="1"
                    android:textColor="@color/text_color"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:fontFamily="@font/inter_medium"
                    android:layout_marginVertical="@dimen/_3sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/image_send"
                    android:src="@drawable/ic_send"
                    android:padding="@dimen/_2sdp"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_comment"
                    tools:itemCount="1"
                    android:overScrollMode="never"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_comment"
                    app:spanCount="2"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ProgressBar
                    android:id="@+id/progress_comment"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:indeterminateTint="@color/icon_color_navigation"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linear_pay"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buy_btn"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:textSize="@dimen/_6sdp"
            android:textAllCaps="false"
            android:text="@string/buy"
            android:layout_weight="1"
            android:background="@drawable/button_back"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.motion.widget.MotionLayout>